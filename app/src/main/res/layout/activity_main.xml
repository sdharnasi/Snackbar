<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    tools:context="com.srinu.snackbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSnackBarNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Snackbar"/>
        <Button
            android:id="@+id/buttonSnackBarCustomColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SnackBar Custom Color"/>
        <Button
            android:id="@+id/buttonSnackBarMultiTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SnackBar Multi Text color"/>
        <Button
            android:id="@+id/buttonSnackBarWithActionCallBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snackbar with Action callback"/>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
